# .clang-format
---
Language:        Cpp
BasedOnStyle:    Google

IndentWidth:     2
TabWidth:        2
UseTab:          Never

# Keep “{” attached to the preceding “=” in designated‐initializer lists
# BreakBeforeBracedInitList:       Attach

# Don’t split “=” onto its own line
BreakBeforeBinaryOperators:      None

# One element per line in argument‐ or initializer‐lists
BinPackArguments:               false
BinPackParameters:              false

# # Keep braces “attached” rather than moving them to a new line
# BraceWrapping:
#   AfterOpeningBrace:             DontChange
#   BeforeClosingBrace:            DontChange

# Use C++11 braced‐list style
Cpp11BracedListStyle:            true
# BreakBeforeBraces:               Attach

# Increase column limit so initializer lists wrap only after 180 characters
ColumnLimit:                     180

# Don’t collapse short blocks/statements onto a single line
# AllowShortIfStatementsOnASingleLine: true
# AllowShortLoopsOnASingleLine:     false
# AllowShortBlocksOnASingleLine:    false
# AllowShortFunctionsOnASingleLine: true

SortIncludes:                    true

AlignConsecutiveShortCaseStatements:
  Enabled: true
  AcrossEmptyLines: true
  AcrossComments: true
  AlignCaseColons: false

AllowShortCaseLabelsOnASingleLine: true
...

